<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/test_img"
    tools:context="com.pepoc.androidnewtechnique.ocr.OcrDemoActivity">

    <ImageView
        android:id="@+id/iv_test_ocr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ocr_test"/>

    <Button
        android:id="@+id/btn_start_ocr_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start"/>

    <TextView
        android:id="@+id/tv_ocr_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
