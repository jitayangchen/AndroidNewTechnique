<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pepoc.androidnewtechnique">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".realm.RealmActivity"
            android:label="@string/title_activity_realm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rxjava.RxJavaActivity"
            android:label="@string/title_activity_rx_java"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rxbinding.RxBindingActivity"
            android:label="@string/title_activity_rx_binding"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rxbus.RxBusActivity"
            android:label="@string/title_activity_rx_bus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".eventbus.EventBusActivity"
            android:label="@string/title_activity_event_bus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".jni.JniActivity"
            android:label="@string/title_activity_jni"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SpannableString.SpannableStringActivity"
            android:label="@string/title_activity_spannable_string"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".andfix.AndfixActivity"
            android:label="@string/title_activity_andfix"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".services.ServiceDemoActivity"
            android:label="@string/title_activity_service_demo"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".services.IntentServiceDemo"
            android:exported="true" />
        <service
            android:name=".services.ServicesDemo"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".okhttp.OkHttpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".threadpool.ThreadPollDemoActivity" />
        <activity android:name=".touchevent.TouchEventDemoActivity" />
        <activity android:name=".handler.HandlerDemoActivity" />
        <activity android:name=".sqlite.SqliteDemoActivity" />
        <activity android:name=".asynctask.AsyncTaskDemoActivity" />
        <activity
            android:name=".fragment.FragmentDemoActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation" />
        <activity
            android:name=".process.ProcessDemoActivity"
            android:process=":newProcess" />
        <activity android:name=".bitmap.BitmapDemoActivity" />
        <activity android:name=".listview.RecyclerViewDemoActivity"></activity>
    </application>

</manifest>